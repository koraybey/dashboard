{
    "private": true,
    "workspaces": [
        "server",
        "application"
    ],
    "devDependencies": {
        "@commitlint/cli": "^19.1.0",
        "@commitlint/config-conventional": "^19.1.0",
        "@types/node": "^20.11.25",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-functional": "^6.1.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-unicorn": "^51.0.1",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "typescript": "^5.4.2"
    },
    "scripts": {
        "prepare": "husky",
        "lint": "eslint",
        "start:application": "yarn workspace application start",
        "start:server": "yarn workspace server start",
        "start": "yarn start:application && yarn start:server",
        "shutdown": "pm2 stop all",
        "kill": "pm2 kill"
    },
    "lint-staged": {
        "*.{js,cjs,jsx,ts,tsx,md,html,css,json,graphql}": [
            "yarn prettier -c"
        ],
        "*.{js,cjs,jsx,ts,tsx,}": [
            "yarn eslint ."
        ]
    },
    "dependencies": {
        "pm2": "^5.3.1"
    }
}
